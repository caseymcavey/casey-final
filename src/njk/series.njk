{% extends '_templates/base.njk' %}

{% block content %}
<article class="container">
  <h1>World Series</h1>
  <p>Intro text here.</p>
  <div class="row">
    {% for ws in teams.series %}
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{ ws.year }} ({{ ws.record }})</h5>
          <p class="card-text">Winning team: {{ ws.winner }} ({{ ws.winrecord }})</p>
          <p class="card-text">Losing team: {{ ws.loser }} ({{ ws.loserecord }})</p>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</article>
{% endblock %}